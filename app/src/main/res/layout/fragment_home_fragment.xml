<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragment.Home_fragment">
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/fotoProfile"
            android:layout_width="50dp"
            android:background="@drawable/buttonlingkarangnobg"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_section"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Sekolah SDN"
        android:textColor="#D8492C"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:textSize="24dp"
        android:textColor="#D8492C"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:text="Sukamaju" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containergabungan"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/textView9">

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="145dp"
            android:id="@+id/containernutrisi"
            android:background="@drawable/buttonlengkungsecond"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">


        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/datasiswa"
            android:layout_marginTop="-10dp"
           android:layout_marginLeft="10dp"

            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Siswa"
            android:textSize="24dp"
            android:textStyle="bold"

            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            />

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="145dp"
            android:id="@+id/containerpelacak"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonlengkungsecond"
            android:layout_toRightOf="@+id/containernutrisi"
            >
        </RelativeLayout>
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/dataujian"
            android:layout_marginTop="-30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Ujian"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="135dp"
            />




    </RelativeLayout>

</RelativeLayout>